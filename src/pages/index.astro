---
import "@fortawesome/fontawesome-free/css/all.min.css"

import { resume } from "../content/resume/data"

import Layout from "../components/Layout.astro"

const openToWork = true
const links = [
	{
		target: "_blank",
		icon: "fa-brands fa-linkedin",
		label: "LinkedIn",
		url: "https://www.linkedin.com/in/htet-nandar-dar7/",
	},
	{
		target: "",
		icon: "fa-regular fa-newspaper",
		label: "Resume",
		url: "/hndar/resume",
	},
]
---

<Layout>
	<body>
		<main
			class="flex h-screen flex-col items-center justify-center space-y-2 py-8 lg:space-y-4 lg:py-16"
		>
			<div class="flex flex-col items-center space-y-2 lg:space-y-4">
				<div class="inline-block rounded-lg border bg-gray-100 px-3 py-1 text-base">
					<span>{resume.positionAppliedFor}</span>
					{openToWork && <span class="text-blue-700"> | Open to Work</span>}
				</div>
				<h1 class="text-4xl font-bold tracking-tighter lg:text-6xl/none">{resume.name}</h1>
				<p
					class="max-w-[600px] text-center text-gray-500 dark:text-gray-400 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
				>
					{resume.biography}
				</p>

				<div class="flex flex-wrap items-center gap-4">
					{
						links.map(({ url, target, icon, label }) => (
							<a
								href={url}
								target={target}
								class="text-blue-600 pr-4 border-r border-slate-400 last-of-type:border-r-0 last-of-type:pr-0 hover:text-blue-700 hover:underline"
							>
								<i class={icon} />
								<span>{label}</span>
							</a>
						))
					}
				</div>
			</div>
		</main>
	</body>
</Layout>
