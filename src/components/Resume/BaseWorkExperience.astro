---
import "../../env.d.ts"

import BaseLink from "./BaseLink.astro"

type WorkExperice = ResumeJson["workExperiences"][number]

interface Props {
	workExperience: WorkExperice
}
const { workExperience } = Astro.props
---

<article class="mb-6">
	<h6 class="text-sm font-semibold mb-2">
		<span>{workExperience.assignedPosition}</span>
	</h6>
	<p class="flex items-center justify-between">
		<a target="_blank" href={workExperience.companyUrl} class="group hover:text-orange-700">
			<span>{workExperience.companyName}</span>
			<i class="fa-solid fa-link opacity-0 group-hover:opacity-50"></i>
		</a>

		<span>{workExperience.fromDate} - {workExperience.toDate}</span>
	</p>

	<ul class="mt-2 pl-4 list-disc">
		{workExperience.descriptions.map((d) => <li>{d}</li>)}
	</ul>

	<p class="mt-2 flex flex-wrap items-center gap-2">
		{
			workExperience.links?.map((link) => (
				<BaseLink
					href={link}
					targetBlank
					class="pr-2 text-orange-600 border-r border-orange-400 hover:underline last-of-type:border-r-0"
				>
					{link}
				</BaseLink>
			))
		}
	</p>
</article>
