---
import BaseSubTitle from "./BaseSubTitle.astro"

interface Props {
	title: string
	class?: string
	hasBorder?: boolean
	visible?: boolean
}
const { class: className, title, hasBorder = true, visible = true } = Astro.props
---

{
	visible && (
		<article class:list={[className, { "border-b border-dashed border-slate-400": hasBorder }]}>
			<BaseSubTitle class="mb-4">{title}</BaseSubTitle>

			<slot />
		</article>
	)
}
