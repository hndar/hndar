---
import { resume } from "../../content/resume/data"

import BaseArticle from "./BaseArticle.astro"
---

<BaseArticle title="Languages" visible={(resume.spokenLanguage?.length || 0) > 0} class="pb-4">
	<ul class="flex flex-col gap-4">
		{
			resume?.spokenLanguage?.map(({ label, proficiency }) => (
				<li>
					<b>{label} : </b>
					<span>{proficiency}</span>
				</li>
			))
		}
	</ul>
</BaseArticle>
