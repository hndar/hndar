---
import { resume } from "../../content/resume/data"

import BaseArticle from "./BaseArticle.astro"
import BaseLink from "./BaseLink.astro"
---

<BaseArticle title="Contact" class="pb-4">
	<div class="flex flex-col gap-2">
		{
			resume.contactInfo.phone.map((phone) => (
				<BaseLink targetBlank href={`tel:${phone}`} class="flex items-center gap-4">
					<i class="fa-solid fa-phone size-4 flex-none" />
					<span class="flex-auto">{phone}</span>
				</BaseLink>
			))
		}

		{
			resume.contactInfo.email.map((email) => (
				<BaseLink targetBlank href={`mailto:${email}`} class="flex items-center gap-4">
					<i class="fa-regular fa-envelope size-4 flex-none" />
					<span class="flex-auto">{email}</span>
				</BaseLink>
			))
		}

		{
			resume.contactInfo.links.map(({ icon, label, url }) => (
				<BaseLink targetBlank href={url} class="flex items-center gap-4">
					{icon ? (
						<i class:list={[icon, "flex-none size-4"]} />
					) : (
						<i class="fa-solid fa-link flex-none size-4" />
					)}
					<span class="flex-auto">{label}</span>
				</BaseLink>
			))
		}

		<p class="flex items-center gap-4">
			<i class="fa-solid fa-location-dot size-4 flex-none" />
			<span class="flex-auto">{resume.contactInfo.address}</span>
		</p>
	</div>
</BaseArticle>
