---
import { resume } from "../../content/resume/data"

import BaseArticle from "./BaseArticle.astro"
---

<BaseArticle title="Personal Information" class="pb-4 h-full">
	<div class="flex flex-col gap-2 flex-wrap">
		<p>
			<b>Date of Birth : </b>
			<span>{resume.personalInfo.dateOfBirth}</span>
		</p>

		<p>
			<b>Nationality : </b>
			<span>{resume.personalInfo.nationality}</span>
		</p>

		<p>
			<b>Religion : </b>
			<span>{resume.personalInfo.religion}</span>
		</p>

		<p>
			<b>Marital Status : </b>
			<span class="capitalize">{resume.personalInfo.maritalStatus}</span>
		</p>
	</div>
</BaseArticle>
