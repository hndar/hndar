---
import { resume } from "../content/resume/data"

interface Props {
	title?: string
}
const { title } = Astro.props
---

<html class="font-body">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" href="/hndar/crown.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Junge&family=Sedan:ital@0;1&display=swap" rel="stylesheet">

		<title>{resume.name} {title}</title>

		<slot name="head" />
	</head>

	<slot />


</html>
